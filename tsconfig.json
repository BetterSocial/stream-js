{
  "compilerOptions": {
    "outDir": "types",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["DOM", "ES6"],
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "lib", "dist", "types"]
}
